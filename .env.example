# ModernTensor Environment Configuration Example
# Copy this file to .env and update with your actual values

# Network Configuration
MODERNTENSOR_NETWORK="TESTNET"  # TESTNET or MAINNET

# API Configuration
MODERNTENSOR_API_PORT=8001

# Logging Configuration
MODERNTENSOR_LOG_LEVEL="DEBUG"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Validator Configuration (optional, for running validator nodes)
# MODERNTENSOR_VALIDATOR_UID="your_validator_uid"
# MODERNTENSOR_VALIDATOR_ADDRESS="your_validator_address"
# MODERNTENSOR_VALIDATOR_API_ENDPOINT="http://your-validator-api:8001"

# Encryption Settings
MODERNTENSOR_ENCRYPTION_PBKDF2_ITERATIONS=100000

# Luxtensor Blockchain Configuration
# L1_RPC_URL="http://localhost:9944"
# L1_NETWORK="testnet"  # testnet, mainnet, or devnet

# Consensus Configuration (advanced settings, use defaults unless you know what you're doing)
# MODERNTENSOR_CONSENSUS_CYCLE_SLOT_LENGTH=600
# MODERNTENSOR_CONSENSUS_NUM_MINERS_TO_SELECT=5
# MODERNTENSOR_CONSENSUS_ENABLE_MINI_BATCH=true
# MODERNTENSOR_CONSENSUS_MINI_BATCH_SIZE=5
