# ============================================================================
# ModernTensor Environment Configuration
# ============================================================================
# Copy this file to .env and update values for your environment.
# DO NOT commit the actual .env file to version control.
# ============================================================================

# --- Network Configuration ---
# RPC endpoint for the Luxtensor node
LUXTENSOR_RPC_URL=http://localhost:8545

# WebSocket endpoint for real-time events
LUXTENSOR_WS_URL=ws://localhost:8546

# Chain ID (8898 = devnet, see sdk/transactions.py DEFAULT_CHAIN_ID)
LUXTENSOR_CHAIN_ID=8898

# Network name (devnet, testnet, mainnet)
LUXTENSOR_NETWORK=devnet

# --- Wallet / Keys ---
# WARNING: Never commit real private keys. Use env vars or a key manager.
# LUXTENSOR_PRIVATE_KEY=0x...
# LUXTENSOR_COLDKEY=0x...
# LUXTENSOR_HOTKEY=0x...
HOTKEY_BASE_DIR=moderntensor
COLDKEY_NAME=your_coldkey_name
HOTKEY_NAME=your_hotkey_name
HOTKEY_PASSWORD=your_secure_password_here

# --- Validator / Miner ---
# Subnet UID to participate in
LUXTENSOR_SUBNET_UID=1

# Axon server port (for miners)
LUXTENSOR_AXON_PORT=8091

# Dendrite timeout in seconds
LUXTENSOR_DENDRITE_TIMEOUT=12

# --- Logging ---
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LUXTENSOR_LOG_LEVEL=INFO

# --- Indexer ---
# GraphQL endpoint for the blockchain indexer
LUXTENSOR_INDEXER_URL=http://localhost:4000

# --- Security ---
# RBAC default role for new users
LUXTENSOR_DEFAULT_ROLE=viewer

# Rate limiting (requests per minute)
LUXTENSOR_RATE_LIMIT=60

# --- zkML (optional) ---
# Proof backend: ezkl, mock
ZKML_BACKEND=ezkl
# ZKML_VERIFICATION_KEY_PATH=/path/to/vk.key

# --- Legacy (DEPRECATED - not used in Layer 1) ---
# BLOCKFROST_PROJECT_ID=your_blockfrost_project_id_here
# CARDANO_NETWORK=TESTNET
